---
interface MembershipPlan {
    title: string;
    price: string;
    features: string[];
    featured?: boolean;
}

const membershipPlans: MembershipPlan[] = [
    {
        title: "Student Membership",
        price: "₹1,200/year",
        features: [
            "Access to all events",
            "Technical workshops",
            "Networking opportunities",
            "Certificate of membership",
            "IEEE CS digital library access"
        ]
    },
    {
        title: "Professional Membership",
        price: "₹2,500/year",
        featured: true,
        features: [
            "All student benefits",
            "Mentorship opportunities",
            "Priority event registration",
            "Leadership opportunities",
            "Industry connections"
        ]
    },
    {
        title: "Academic Membership",
        price: "₹2,000/year",
        features: [
            "All student benefits",
            "Subscription to IEEE CS magazines",
            "Research collaboration opportunities",
            "Academic networking",
            "Discounted certification programs"
        ]
    }
];
---

<section id="membership" class="section">
    <div class="container">
        <h2 class="section-title">Join Our Community</h2>
        <p class="section-subtitle">Become a member of IEEE Computer Society and unlock a world of opportunities to
            learn, grow, and connect.</p>

        <div class="membership-cards">
            {membershipPlans.map(plan => (
                <div class={`membership-card ${plan.featured ? 'featured' : ''}`}>
                    <h3>{plan.title}</h3>
                    <div class="membership-price">{plan.price}</div>
                    <ul class="membership-features">
                        {plan.features.map(feature => (
                            <li>{feature}</li>
                        ))}
                    </ul>
                    <button class="apply-button">Apply Now</button>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .membership-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .membership-card {
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        transition: var(--transition);
        text-align: center;
        position: relative;
        z-index: 1;
        padding: 3rem 2rem;
    }

    .membership-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background-color: var(--primary);
        z-index: -1;
    }

    .membership-card.featured {
        transform: scale(1.05);
        z-index: 2;
    }

    .membership-card.featured::before {
        background-color: var(--accent);
    }

    .membership-card h3 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .membership-price {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 2rem;
    }

    .membership-features {
        margin-bottom: 2rem;
    }

    .membership-features li {
        margin-bottom: 0.8rem;
        list-style: none;
    }

    .apply-button {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 0.8rem 2rem;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        display: inline-block;
    }

    .apply-button:hover {
        background-color: var(--secondary);
    }

    .featured .apply-button {
        background-color: var(--accent);
        color: var(--dark);
    }

    .featured .apply-button:hover {
        background-color: #e6bc00;
    }
</style>
