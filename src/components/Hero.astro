---
import "../styles/global.css";
import "@fontsource/inter";
import "animate.css";

const headingText = "Empowering Tech Leaders of Tomorrow";
const words = headingText.split(" ");
---

<section class="hero">
  <div class="hero-overlay"></div>
  <div class="container relative z-10">
    <div class="flex flex-col items-center justify-center text-center">
      <div
        class="badge animate__animated animate__fadeInDown"
        style="animation-delay: 0.1s"
      >
        IEEE Computer Society
      </div>

      <h1 class="hero-heading">
        {
          words.map((word, index) => (
            <span
              class="inline-block animate__animated animate__fadeInUp"
              style={`animation-delay: ${index * 0.2}s; margin-right: 1rem;`}
            >
              {word}
            </span>
          ))
        }
      </h1>

      <p
        class="hero-description animate__animated animate__fadeInUp"
        style="animation-delay: 1.2s"
      >
        IEEE Computer Society, Student Chapter at Pandit Deendayal Energy
        University â€“ Where innovation meets community. Join us to explore,
        learn, and grow in the world of computing.
      </p>

      <div
        class="hero-buttons animate__animated animate__fadeInUp"
        style="animation-delay: 1.5s"
      >
        <button class="primary-button">Join Our Chapter</button>
        <button class="secondary-button">Explore Events</button>
      </div>

      <div
        class="scroll-indicator animate__animated animate__fadeInUp"
        style="animation-delay: 2s"
      >
        <span>Scroll Down</span>
        <div class="chevron-down">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="6 9 12 15 18 9"></polyline>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Geometric pattern background -->
  <div class="geometric-pattern"></div>
</section>

<style>
  .hero {
    height: 100vh;
    position: relative;
    color: #003366; /* Deep blue text for professional look */
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #ffffff; /* White base background */
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.9) 0%,
      rgba(255, 255, 255, 0.8) 100%
    );
    z-index: 1;
  }

  .badge {
    background-color: #003366; /* Deep blue badge */
    padding: 0.5rem 1.5rem;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 2rem;
    color: #ffffff; /* White text */
    box-shadow: 0 4px 10px rgba(0, 51, 102, 0.2);
  }

  .hero h1.hero-heading {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    color: #003366; /* Deep blue for clear, professional text */
    text-shadow: none; /* Removed blur effect */
  }

  .hero-description {
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    color: #333333; /* Darker text for better readability */
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .primary-button {
    background: #ffcc00; /* Yellow button */
    color: #003366; /* Blue text */
    border: none;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(255, 204, 0, 0.3);
  }

  .primary-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 15px rgba(255, 204, 0, 0.4);
  }

  .secondary-button {
    background: transparent;
    color: #003366; /* Blue text */
    padding: 0.95rem 2.5rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid #003366; /* Blue border */
  }

  .secondary-button:hover {
    background-color: rgba(0, 51, 102, 0.05);
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(0, 51, 102, 0.1);
  }

  .scroll-indicator {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #003366; /* Blue text */
    transition: all 0.3s ease;
  }

  .scroll-indicator:hover {
    transform: translateY(5px);
  }

  .scroll-indicator span {
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
  }

  .chevron-down {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  .geometric-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ffffff;
    background-image: linear-gradient(
        30deg,
        #ffcc00 12%,
        transparent 12.5%,
        transparent 87%,
        #ffcc00 87.5%,
        #ffcc00
      ),
      linear-gradient(
        150deg,
        #ffcc00 12%,
        transparent 12.5%,
        transparent 87%,
        #ffcc00 87.5%,
        #ffcc00
      ),
      linear-gradient(
        30deg,
        #ffcc00 12%,
        transparent 12.5%,
        transparent 87%,
        #ffcc00 87.5%,
        #ffcc00
      ),
      linear-gradient(
        150deg,
        #ffcc00 12%,
        transparent 12.5%,
        transparent 87%,
        #ffcc00 87.5%,
        #ffcc00
      ),
      linear-gradient(
        60deg,
        #ffcc0077 25%,
        transparent 25.5%,
        transparent 75%,
        #ffcc0077 75%,
        #ffcc0077
      ),
      linear-gradient(
        60deg,
        #ffcc0077 25%,
        transparent 25.5%,
        transparent 75%,
        #ffcc0077 75%,
        #ffcc0077
      );
    background-position:
      0 0,
      0 0,
      25px 50px,
      25px 50px,
      0 0,
      25px 50px;
    background-size: 50px 100px;
    opacity: 0.05;
    z-index: 0;
  }

  .container {
    position: relative;
  }

  @media (max-width: 768px) {
    .hero h1.hero-heading {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.1rem;
      padding: 0 1rem;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .badge {
      font-size: 0.8rem;
      padding: 0.4rem 1.2rem;
    }

    .primary-button,
    .secondary-button {
      padding: 0.8rem 2rem;
    }
  }
</style>
