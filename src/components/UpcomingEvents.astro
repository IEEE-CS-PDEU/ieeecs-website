---
// Sample event data - you would likely fetch this from a CMS or API
const upcomingEvents = [
  {
    id: 1,
    title: "Machine Learning Workshop",
    date: "May 5, 2025",
    time: "10:00 AM - 2:00 PM",
    venue: "Engineering Block, Room 302",
    description:
      "Join us for a hands-on workshop on machine learning fundamentals. Learn about neural networks, decision trees, and practical applications in various engineering domains.",
    posterUrl: "/events/ml-workshop.jpg",
    registrationUrl: "https://forms.google.com/ml-workshop-registration",
  },
  {
    id: 2,
    title: "Cybersecurity Symposium",
    date: "May 15, 2025",
    time: "2:00 PM - 5:00 PM",
    venue: "Central Auditorium",
    description:
      "Industry experts share insights on the latest cybersecurity threats and defense mechanisms. Perfect for students interested in network security and ethical hacking.",
    posterUrl: "/events/cybersecurity-symposium.jpg",
    registrationUrl: "https://forms.google.com/cybersecurity-registration",
  },
  {
    id: 3,
    title: "Aurdino 101",
    date: "June 10-12, 2025",
    time: "48-hour event",
    venue: "Innovation Center",
    description:
      "Into to Basics of Aurdino and its applications. This workshop will cover the basics of Aurdino, including hardware setup, programming, and project development.",
    posterUrl: "/events/hackathon.jpg",
    registrationUrl: "https://forms.google.com/hackathon-registration",
  },
];
---

<section id="events" class="events-section">
  <div class="container mx-auto px-4 py-16">
    <div class="section-header text-center mb-12">
      <h2 class="text-3xl font-bold mb-2">Upcoming Events</h2>
      <p class="text-lg mt-4">
        Join us at our upcoming events to learn, network, and grow your skills
      </p>
    </div>

    <div class="events-container">
      {
        upcomingEvents.map((event) => (
          <div class="event-card justify-between !p-[1rem]">
            <div class="flex flex-col gap-0">
              <h3 class="event-title">{event.title}</h3>
              <div class="event-meta mt-auto">
                <div class="meta-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="meta-icon"
                    width="17"
                    height="17"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                    <line x1="16" y1="2" x2="16" y2="6" />
                    <line x1="8" y1="2" x2="8" y2="6" />
                    <line x1="3" y1="10" x2="21" y2="10" />
                  </svg>
                  <span class="text-sm">{event.date}</span>
                </div>

                <div class="meta-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="meta-icon"
                    width="17"
                    height="17"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                  </svg>
                  <span class="text-sm">{event.time}</span>
                </div>

                <div class="meta-item">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="meta-icon"
                    width="17"
                    height="17"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
                    <circle cx="12" cy="10" r="3" />
                  </svg>
                  <span class="text-sm">{event.venue}</span>
                </div>
              </div>
              <p class="event-description">{event.description}</p>
            </div>

            <div>
              <a
                href={event.registrationUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="registration-button"
              >
                Register Now
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="ml-2"
                >
                  <line x1="5" y1="12" x2="19" y2="12" />
                  <polyline points="12 5 19 12 12 19" />
                </svg>
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .events-section {
    background-color: #f8f9fa;
    padding: 2rem 0;
  }

  .section-header {
    margin-bottom: 3rem;
  }

  .events-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .event-card {
    display: flex;
    flex-direction: column;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .event-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  .event-poster {
    height: 220px;
    overflow: hidden;
  }

  .event-poster img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .event-card:hover .event-poster img {
    transform: scale(1.05);
  }

  .event-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #003366;
    margin-bottom: 0.3rem;
  }

  .event-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    color: #555;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .meta-icon {
    color: #ffcc00;
  }

  .event-description {
    margin: 1rem 0;
    color: #444;
    line-height: 1.6;
  }

  .registration-button {
    display: inline-flex;
    align-items: center;
    background-color: #ffcc00;
    color: #003366;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 1rem;
    text-decoration: none;
  }

  .registration-button:hover {
    background-color: #e6b800;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255, 204, 0, 0.3);
  }

  .view-all-container {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .view-all-button {
    display: inline-flex;
    align-items: center;
    background-color: transparent;
    color: #003366;
    border: 2px solid #003366;
    padding: 0.75rem 2rem;
    border-radius: 6px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .view-all-button:hover {
    background-color: #003366;
    color: white;
    transform: translateY(-2px);
  }

  @media (min-width: 768px) {
    .events-container {
      grid-template-columns: repeat(2, 1fr);
    }

    .event-meta {
      flex-direction: row;
      flex-wrap: wrap;
    }
  }

  @media (min-width: 1024px) {
    .events-container {
      grid-template-columns: repeat(3, 1fr);
    }

    .event-card {
      flex-direction: column;
    }

    .event-poster {
      height: 200px;
    }
  }
</style>
